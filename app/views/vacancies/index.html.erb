<h1>Listing vacancies</h1>

<table>
  <tr>
    <th>Fullname</th>
    <th>Addingdate</th>
    <th>Validperiod</th>
    <th>Salary</th>
    <th>Contactinfo</th>
    <th>Desirableskill</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vacancies.each do |vacancy| %>
  <tr>
    <td><%= vacancy.fullname %></td>
    <td><%= vacancy.addingdate %></td>
    <td><%= vacancy.validperiod %></td>
    <td><%= vacancy.salary %></td>
    <td><%= vacancy.contactinfo %></td>
    <td><%= vacancy.desirableskill %></td>
    <td><%= link_to 'Show', vacancy %></td>
    <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
    <td><%= link_to 'Destroy', vacancy, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

